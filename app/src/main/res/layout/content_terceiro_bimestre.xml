<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_terceiro_bimestre">


    <TextView
        android:id="@+id/txtTituloPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="25dp"
        android:text="App Media" />

    <TextView
        android:id="@+id/TxtTituloSecundario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTituloPrincipal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginTop="31dp"
        android:text="@string/terceiroBimestre" />

    <TextView
        android:id="@+id/TxtTituloMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtTituloSecundario"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="44dp"
        android:text="Matéria" />

    <TextView
        android:id="@+id/txtTituloNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtTituloSecundario"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/TxtTituloMateria"
        android:layout_toRightOf="@+id/TxtTituloMateria"
        android:text="Nota Prova" />

    <TextView
        android:id="@+id/txtTituloTrabalho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtTituloSecundario"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@+id/txtTituloNota"
        android:layout_toRightOf="@+id/txtTituloNota"
        android:text="Nota Trabalho" />

    <EditText
        android:id="@+id/editTextMateria"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtTituloMateria"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/tituloMateria"
        android:text="" />

    <EditText
        android:id="@+id/editTextNotaProva"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtTituloMateria"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/editTextMateria"
        android:layout_toRightOf="@+id/editTextMateria"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="" />

    <EditText
        android:id="@+id/editTextMedia"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTituloMedia"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="" />

    <EditText
        android:id="@+id/editTextSituacao"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTituloMedia"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@+id/editTextMedia"
        android:layout_toRightOf="@+id/editTextMedia"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="" />

    <EditText
        android:id="@+id/editTextNotaTrabalho"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtTituloMateria"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/editTextNotaProva"
        android:layout_toRightOf="@+id/editTextNotaProva"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="" />

    <TextView
        android:id="@+id/textViewTituloMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMateria"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="51dp"
        android:text="Media" />

    <TextView
        android:id="@+id/textViewTituloSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextMateria"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="52dp"
        android:layout_toEndOf="@+id/textViewTituloMedia"
        android:layout_toRightOf="@+id/textViewTituloMedia"
        android:text="Situação" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextMedia"
        android:layout_alignEnd="@+id/editTextSituacao"
        android:layout_alignRight="@+id/editTextSituacao"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:text="@string/btnCalcular" />
    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextMedia"
        android:layout_alignEnd="@+id/editTextSituacao"
        android:layout_alignRight="@+id/editTextSituacao"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="222dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="-124dp"
        android:layout_marginRight="-124dp"
        android:text="@string/btnVoltar" />

</RelativeLayout>